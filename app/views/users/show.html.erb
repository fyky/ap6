<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/post', book: @book %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-user-show">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "/assets/noimage2.jpeg"%>
            <% end %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td><%= "コメント数：#{book.book_comments.count} " %></td>
          </tr>
        <% end %>
      </table>
    </div>




  </div>
</div>