<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/post', book: @book %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th></th>
        </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "/assets/noimage2.jpeg" %>
          <td><%=user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      <% end %>
      </table>
    </div>

  </div>
</div>