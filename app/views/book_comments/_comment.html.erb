        <% @book.book_comments.each do |book_comment| %>
        <p>
          <%= attachment_image_tag book_comment.user, :profile_image, :fill, 30, 30, fallback: "/assets/noimage2.jpeg" %>
          <%= book_comment.comment %>
          <br>
          <%= link_to user_path(book_comment.user) do %>
          <%= book_comment.user.name %>
          <% end %>
          <% if book_comment.user == current_user %>
          <td>
            <%= link_to book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: {confirm: "Are you sure?"} do %>
              <button type="button" class="btn btn-danger">Destroy</button>
            <% end %>
          </td>
          <% end %>
        </p>
        <% end %>
      </div>